@model Trip
@{
    ViewBag.Title = "Accommodation Contact Details";
}

<h2 class="display-4 mb-4 text-center">@ViewBag.Title</h2>
<form method="post" asp-action="Add2">

    <div class="form-group">
        <label asp-for="AccommodationPhone">
            @Html.DisplayNameFor(model => model.AccommodationPhone)
        </label>
        <input asp-for="AccommodationPhone" class="form-control">
        <span asp-validation-for="AccommodationPhone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AccommodationEmail">
            @Html.DisplayNameFor(model => model.AccommodationEmail)
        </label>
        <input asp-for="AccommodationEmail" class="form-control">
        <span asp-validation-for="AccommodationEmail" class="text-danger"></span>
    </div>

    <button 
    type="submit"
    class="btn btn-outline-primary">
        Next Page
    </button>

    <a asp-controller="Home"
       asp-action="Index"
       class="btn btn-outline-secondary">
        Cancel
    </a>
</form>