@model Trip

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4 mb-4">Delete @Model.Destination?</h1>

    <h3>Are you sure you want to delete @Model.Destination?</h3>
    <div class="d-flex align-items-center justify-content-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-outline-danger me-2" />
            <a 
            class="btn btn-outline-primary" 
            asp-action="Index">
                Back to List
            </a>
        </form>
    </div>
</div>
